{% extends 'base.html.twig' %}

{% block title %}{{ userVisited.username }}{% endblock %}

{% block body %}
    <!-- Page Header -->
    <header class="masthead p-4 my-3">
        <div class="overlay"></div>
        <div class="container card bg-light p-3">
            <div class="site-heading text-center">
                <h1><u>User</u> : {{ userVisited.username }}</h1>
                <div class="card-body d-flex justify-content-between">
                    <div>Send email : <a href="mailto:{{ userVisited.email }}">{{ userVisited.email }}</a></div>
                    <div>Joined on {{ userVisited.createdAt|date('d/m/Y \\a\\t h:i') }}</div>
                </div>
            </div>
        </div>
    </header>

    <div class="container">
        <div class="card bg-light">
            <h2 class="card-header">Posts :</h2>
            <div class="card-body">
                {% for post in userVisited.posts %}
                    {% include "post/post.html.twig" with {'routeName':'profile'} %}
                {% endfor %}
            </div>
        </div>
    </div>

    <div class="container">
        <div class="card bg-light mt-4">
            <h2 class="card-header">Comments :</h2>
            <div class="card-body">
                {% for comment in userVisited.userComments %}
                    <h5 class="card-title">{{ userVisited.username }} commented on "<a href="{{ url('post',{'id': comment.post.id}) }}">{{ comment.post.title}}</a>" :</h5>
                    <p class=""card-text>{{ comment.body }}</p>
                {% endfor %}
            </div>
        </div>
    </div>



{% endblock %}
