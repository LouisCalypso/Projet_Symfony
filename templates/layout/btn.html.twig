{% if userLoggedIn %}
    <a
        data-target="{{ path('create-post')}}"
        data-tooltip="voir"
        class="modal-trigger d-flex bg-primary rounded-circle border-0 align-items-center justify-content-center overflow-hidden shadow"
        style="position: fixed; right: 60px; bottom: 60px; width: 80px; height: 80px;"
        href="#write"
    >
        <img
            src="{{ asset("/img/pen.png") }}" width="66" height="66"
            style="position: relative; left: 15%; bottom: 15%;"
        />
    </a>


    <div id="write" class="modal" role="dialog">
        <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content p-5 ">
            <div class="w-100 text-center">
                <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                    <span class="sr-only">Loading...</span>
                </div>
            </div>
        </div>
        </div>
    </div>
{% endif %}