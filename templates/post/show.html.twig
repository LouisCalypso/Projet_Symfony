{% extends 'base.html.twig' %}

{% block title %}Hello Post!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>
    <!-- Page Header -->
    <header class="masthead" style="background-image: url('{{ post.getImage()}}')">
        <div class="d-flex justify-content-between">
            <div class="post-preview mr-4">
                {#<a href="{{ url('show', {"id": post.getId() } )}}">#}
                <h2 class="post-title">
                    <img src="{{ absolute_url(asset('img/up-arrow.png')) }}" style="width:25px;">
                    <span style="color:red;">{{ post.getNbVotes() }}</span>
                    <img src="{{ absolute_url(asset('img/down-arrow.png')) }}" style="width:25px;">
                    <a href="">
                        {{ post.getTitle() }}
                    </a>
                </h2>

                <p class="post-meta">Posted by
                    <a href="#">quelqu'un</a>
                    on the {{ post.getCreatedAt()|date('d/m/Y') }}
                </p>
            </div>
    </header>


    <hr>

    <div class="container">
        <div class="row">
            <h3 class="col-lg-8 col-md-10 mx-auto"> {{ post.getComments()|length }} Comment{% if post.getComments()|length > 1 %}s{% endif %}</h3>
        </div>

        <!-- Comments Form -->
        <div class="col-lg-8 col-md-10 mx-auto">
            <div class="card my-4">
                <h5 class="card-header">Leave a Comment:</h5>
                <div class="card-body">
                    <!--<form>
                    </form>-->
                    {{ form_start(commentForm, {attr: {'novalidate': 'novalidate'}}) }}
                    <div class="form-group">
                        <label>Comment</label>
                        {{ form_widget(commentForm.comment) }}
                    </div>
                    <button type="submit" class="btn btn-secondary">Submit</button>

                    {{ form_end(commentForm) }}

                </div>
            </div>
        </div>



        {% for comment in post.getComments() %}
            <div class="row">

                <div class="media mb-4 mt-4 col-lg-8 col-md-10 mx-auto">
                    <div class="media-body">
                        <h5 class="mt-0">{{ comment.getUser().getUserName() }} <small>{{  comment.getCreatedAt()|date("d/m/Y") }}</small></h5>
                        <blockquote>{{  comment.getBody() }}</blockquote>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}
