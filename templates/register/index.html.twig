{% extends 'base.html.twig' %}

{% block title %}Sign up{% endblock %}

{% block body %}
    <!-- Page Header -->
    <header class="masthead p-5 my-3" >
        <div class="overlay"></div>
        <div class="container">
            <div class="site-heading text-center">
            {% if app.user %}
                You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
            {% else %}
                <h1>Please sign up</h1>
                <span class="subheading">Tell us about you</span>
            {% endif %}
            </div>
        </div>
    </header>

    <div class="container">
        {% form_theme userFormType 'bootstrap_4_horizontal_layout.html.twig' %}
        {{ form_start(userFormType) }}
        {{ form_row(userFormType.email) }}
        {{ form_row(userFormType.username) }}
        {{ form_row(userFormType.password ) }}
        <button type="submit" class="btn btn-primary ">Submit</button>
        {{ form_end(userFormType) }}
    </div>
{% endblock %}
